/*
| article    | aside      | details    | div        |
|            ·		        ·	           ·						|
| footer     | header     | iframe     | main       |
|            ·		        ·	           ·						|
| nav        | section    | span       |            |
*/

article, aside, details, div, footer, header, 
hgroup, iframe, main, nav, section
  wh(100%, 1rem, auto)
  display    block
  margin     auto

iframe
  sqr(100%)
  position   relative
  overflow   hidden

nav
  nav(nav-x, nav-y)

section
	text-align justify
  position relative
	overflow hidden

span
  wh(100%, 1rem, auto)
  display    inline


